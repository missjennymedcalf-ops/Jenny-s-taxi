  <script>
    const RATE = 2.7; // Hidden from user
    const AIRPORT = {
      stansted: 90,
      londoncity: 90,
      gatwick: 120,
      luton: 120,
      heathrow: 140
    };

    async function calculateFare() {
      const pickup = document.getElementById('pickup').value;
      const dropoff = document.getElementById('dropoff').value;
      const service = document.getElementById('service').value;
      const loading = document.getElementById('loading');
      const result = document.getElementById('result');
      const priceEl = document.getElementById('price');

      result.style.display = 'none';
      loading.style.display = 'block';
      priceEl.textContent = '';

      try {
        if (AIRPORT[service]) {
          loading.style.display = 'none';
          priceEl.textContent = 'Â£' + AIRPORT[service].toFixed(2);
          result.style.display = 'block';
          return;
        }

        const response = await fetch('/.netlify/functions/getDistance', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ pickup, dropoff })
        });

        const data = await response.json();

        loading.style.display = 'none';

        if (data && data.distanceMiles) {
          const total = data.distanceMiles * RATE;
          priceEl.textContent = 'Â£' + total.toFixed(2);
        } else {
          priceEl.textContent = 'Unable to calculate distance. Please check addresses.';
        }
        result.style.display = 'block';
      } catch (err) {
        loading.style.display = 'none';
        priceEl.textContent = 'Error calculating fare. Please try again.';
        result.style.display = 'block';
      }
    }
  </script>
